project
    : requirements 
      <include>../include
      <include>./fmt-4.0.0
      <define>FMT_HEADER_ONLY=1
      <define>BOOST_STRINGIFY_NOT_HEADER_ONLY
    : default-build release
    ;

sources =
  to_FILE.cpp
  to_char_ptr.cpp
  utf16_to_utf8.cpp
  utf8_to_utf16.cpp
  ;

for local src in $(sources)
{
    exe $(src:B) : $(src) /boost/stringify//boost_stringify : <optimization>speed ;
}

install ./out : $(sources:B) ;


